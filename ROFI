sudo pacman -S rofi papirus-icon-theme
mkdir .config/rofi
cd .config/rofi
sudo git clone https://github.com/w8ste/Tokyonight-rofi-theme.git
sudo mv ~/.config/rofi/Tokyonight-rofi-theme/tokyonight.rasi /usr/share/rofi/themes
sudo mv ~/.config/rofi/Tokyonight-rofi-theme/tokyonight_big1.rasi /usr/share/rofi/themes
sudo mv ~/.config/rofi/Tokyonight-rofi-theme/tokyonight_big2.rasi /usr/share/rofi/themes
sudo mv ~/.config/rofi/Tokyonight-rofi-theme/config.rasi .config/rofi
sudo rm -r ~/.config/rofi/Tokyonight-rofi-theme

#si no cambia de tema usar:
