# Video output options
vo=gpu
hwdec=auto                  # Enable hardware decoding (if supported)

# GPU-specific settings
gpu-api=opengl              # Use OpenGL for rendering
gpu-context=auto            # Automatically select GPU context

# Video sync options
video-sync=display-resample # Sync video to display for smooth playback
interpolation=yes           # Enable frame interpolation
interpolation-threshold=0.1 # Aggressive interpolation for frame rates close to the target
tscale=catmull_rom          # High-quality temporal scaling

# Scaling options
scale=spline36              # High-quality upscaling
dscale=spline36             # High-quality downscaling

# Cache settings
cache=yes
cache-pause=yes
demuxer-max-bytes=512M      # Larger cache size for buffering
demuxer-max-back-bytes=5M   # Backward caching for smoother seeking
